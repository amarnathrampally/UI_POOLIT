<?xml version="1.0" encoding="utf-8"?>

  <LinearLayout
      xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:app="http://schemas.android.com/apk/res-auto"
      xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fef46004">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:title="@string/menu_new_pool"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="?attr/colorPrimary"
        android:elevation="6dp"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>



    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        >

      <LinearLayout
          xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:app="http://schemas.android.com/apk/res-auto"
          xmlns:tools="http://schemas.android.com/tools"
          android:orientation="vertical"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:padding="16dp"
          android:background="#fef46004">




       <ImageView
        android:background="#ffffff"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:id="@+id/new_pool_image"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="0dp"/>

      <EditText
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/new_pool_title"
        android:layout_gravity="center_horizontal"
        android:hint="Pool Title"
        android:padding="18dp"
        android:layout_marginBottom="15dp"/>

    <EditText
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/new_pool_description"
        android:layout_gravity="center_horizontal"
        android:hint="Pool Description"
        android:padding="18dp"
        android:layout_marginBottom="15dp"/>

    <EditText
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/new_target_amount"
        android:hint="Target Amount"
        android:padding="18dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="15dp"/>

    <EditText
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/new_end_date"
        android:padding="18dp"
        android:hint="End Date"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="15dp" />

    <EditText
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/new_parts"
        android:hint="Split to No of Equal Parts "
        android:padding="18dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="15dp"/>

    <EditText
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/new_addmem_group"
        android:layout_gravity="center_horizontal"
        android:hint="Add Members from Groups"
        android:padding="18dp"
        android:layout_marginBottom="20dp"/>


    <EditText
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/new_addmem_contacts"
        android:layout_gravity="center_horizontal"
        android:hint="Add members from contacts"
        android:padding="18dp"
        android:layout_marginBottom="20dp"/>


      </LinearLayout>

    </ScrollView>
</LinearLayout>